{
    "name": "mfonte/imdb-scraper",
    "description": "Locale-Aware PHP IMDb Scraper, with a fluent API for searching for Movies and TV Shows, and retrieving detailed information about them.",
    "keywords": [
        "imdb",
        "api",
        "film",
        "movie",
        "search"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Maurizio Fonte",
            "email": "fonte.maurizio@gmail.com"
        }
    ],
    "type": "package",
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3.9",
        "voku/simple-cache": "^5.0",
        "voku/simple_html_dom": "^4.8",
        "voku/portable-utf8": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "php-coveralls/php-coveralls": "^2.8",
        "symfony/var-dumper": "^6.4"
    },
    "scripts": {
        "test": "php vendor/phpunit/phpunit/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Mfonte\\ImdbScraper\\": "src/"
        }
    }
}
